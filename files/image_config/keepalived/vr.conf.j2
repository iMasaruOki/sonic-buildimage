vrrp_instance {{ IFNAME }} {
    virtual_router_id {{ VRID }}
    state {{ STATE }}
    native_ipv6
    interface {{ IFNAME }}
    virtual_ipaddress {
        ::ffff:{{ VIP }}
    }
    notify_master "/etc/keepalived/notify.sh {{ VIP }} {{ IFNAME }} MASTER {{ DOWNLINK0 | default('') }} {{ DOWNLINK1 | default('') }}"
    notify_backup "/etc/keepalived/notify.sh {{ VIP }} {{ IFNAME }} BACKUP {{ DOWNLINK0 | default('') }} {{ DOWNLINK1 | default('') }}"
    notify_fault  "/etc/keepalived/notify.sh {{ VIP }} {{ IFNAME }} FAULT {{ DOWNLINK0 | default('') }} {{ DOWNLINK1 | default('') }}"
    notify_stop   "/etc/keepalived/notify.sh {{ VIP }} {{ IFNAME }} STOP {{ DOWNLINK0 | default('') }} {{ DOWNLINK1 | default('') }}"
}
